<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvUsernameTop"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:text="Username"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/ivPostPhoto"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/media_option_button"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivPostPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUsernameTop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPostPhoto"
        app:srcCompat="@drawable/ufi_heart"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivPostPhoto"
        android:layout_toEndOf="@+id/ivLike"
        app:srcCompat="@drawable/ufi_comment"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivDirect"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivPostPhoto"
        android:layout_toEndOf="@+id/ivComment"
        app:srcCompat="@drawable/direct"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/ivPostPhoto"
        android:layout_below="@+id/ivPostPhoto"
        app:srcCompat="@drawable/ufi_save"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvUsernameBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLike"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="Username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLike"
        android:layout_toEndOf="@+id/tvUsernameBottom"
        android:text="Caption"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tvRelativeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvUsernameBottom"
        android:layout_below="@+id/tvUsernameBottom"
        android:text="Relative Time" />


</RelativeLayout>